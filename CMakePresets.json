{
    "version": 6,
    "cmakeMinimumRequired":  {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "default config",
            "binaryDir": "${sourceDir}/build"
        }
    ],
    "buildPresets": [
        {

            "name": "default",
            "configurePreset": "default"
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "steps": [
                {
                    "type": "configure",
                    "name": "default"
                },
                {
                    "type": "build",
                    "name": "default"
                }
            ]
        }
    ]
}
